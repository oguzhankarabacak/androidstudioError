<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/sign_up_activity_name_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_activity_password_text"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_password_text"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_password_text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_activity_password_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_activity_signup_button"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_signup_button"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_signin_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_name_text" />

    <Button
        android:id="@+id/sign_up_activity_signin_button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="74dp"
        android:onClick="signIn"
        android:text="Sign In"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_activity_signup_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_up_activity_signup_button" />

    <Button
        android:id="@+id/sign_up_activity_signup_button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="53dp"
        android:onClick="signUp"
        android:text="SÄ±gn Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sign_up_activity_signin_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_password_text" />

</android.support.constraint.ConstraintLayout>